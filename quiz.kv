<OptionButton>
    font_name: "Mogul"
    font_size: "40sp"
    background_color: 1, 1, 1, 0
    bg_color: 40/255, 6/255, 109/255, 1
    on_release: app.quiz(self.text, self)
    canvas.before:
        Color:
            rgb: root.bg_color
        RoundedRectangle:
            size: self.size
            pos: self.x, self.y + 5
            radius: [10]
MDScreen:
    question1: question
    name: "quiz"
    MDFloatLayout:
        md_bg_color: rgba(255, 255, 255, 255)
        MDLabel: 
            id: question
            text: ""
            font_name: "Mogul"
            font_size: "22sp"
            halign: "center"
            pos_hint: {"center_x": .5, "center_y": .9}
            color: 0, 0, 0, 1
            line_height: 1.1
        MDLabel: 
            text: "Car"
            font_name: "Mogul"
            font_size: "44sp"
            halign: "center"
            pos_hint: {"center_x": .5, "center_y": .7}
            color: 0, 0, 0, 1
            line_height: 1.1
        MDGridLayout:
            rows: 2
            cols: 2
            size_hint: .8, .3
            pos_hint: {"center_x": .5, "center_y": .47}
            spacing: 18
            OptionButton:
                id: option1
                font_size: "22sp"
            OptionButton:
                id: option2
                font_size: "22sp"
            OptionButton:
                id: option3
                font_size: "22sp"
            OptionButton:
                id: option4
                font_size: "22sp"
        Button:
            text: "Дараагийх"
            font_name: "Mogul"
            font_size: "40sp"
            size_hint: .55, .12
            pos_hint: {"center_x": .5, "center_y": .23}
            background_color: 1, 1, 1, 0
            on_release: 
                app.next_question()
            canvas.before:
                Color:
                    rgb: rgba(251, 187, 29, 255)
                RoundedRectangle:
                    size: self.size
                    pos: self.x, self.y + 5
                    radius:[10]
        Button:
            text: "Гарах"
            font_name: "Mogul"
            font_size: "40sp"
            size_hint: .55, .12
            pos_hint: {"center_x": .5, "center_y": .10}
            background_color: 1, 1, 1, 0
            on_release:
                app.final_score()
            canvas.before:
                Color:
                    rgb: rgba(251, 187, 29, 255)
                RoundedRectangle:
                    size: self.size
                    pos: self.x, self.y + 5
                    radius:[10]